<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.example.jasensanders.movies.DetailListFragment"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/movie_dk_blue">

    <View style="@style/Divider" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:text="@string/reviewDivider"
        android:textColor="@color/stark_white"
        android:layout_marginLeft="20dp"
        android:fontFamily="sans-serif-condensed"
        android:textSize="25sp"
        android:background="@color/movie_dk_blue"/>


    <TextView
        android:id="@+id/reviews_textview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/stark_white"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:fontFamily="sans-serif-condensed"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"/>

</LinearLayout>