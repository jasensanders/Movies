<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0e1147">
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="wrap_content" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.jasensanders.movies.DetailActivityFragment"
    android:background="#0e1147">

    <ImageView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="200dp"
        android:layout_height="350dp"
        android:id="@+id/posterView"
        android:foregroundGravity="center_vertical|center_horizontal"
        android:layout_centerHorizontal="true" />

    <TextView android:text="@string/hello_world" android:layout_width="wrap_content"
        android:id="@+id/movieTitle"
        android:layout_height="wrap_content"
        android:layout_below="@+id/posterView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:textColor="#ffffff"
        android:textSize="@dimen/abc_dialog_padding_top_material" />

    <TextView android:text="@string/hello_world" android:layout_width="wrap_content"
        android:id="@+id/releaseDate"
        android:layout_height="wrap_content"
        android:layout_below="@+id/movieTitle"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:textColor="#ffffff" />
    <TextView android:text="@string/hello_world" android:id= "@+id/rating"
        android:layout_below="@id/releaseDate"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:textColor="#ffffff" />
    <TextView android:text="@string/hello_world"
        android:id="@+id/synopsis"
        android:layout_below="@id/rating"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:textColor="#ffffff" />

</RelativeLayout>
</ScrollView>